			}
			blockoverride "On_click" { onclick = "[SelectTargetProvinceView.Sort('nobles')]" }
			blockoverride "DownState" { down = "[SelectTargetProvinceView.IsSorted('nobles')]" }
		}
		text_button_sort = {
			size = { 90 0 }
