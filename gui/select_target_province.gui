				using = icon_pop_freemen
				visible = yes
			}
			blockoverride "On_click" { onclick = "[SelectTargetProvinceView.Sort('freemen')]" }
			blockoverride "DownState" { down = "[SelectTargetProvinceView.IsSorted('freemen')]" }
